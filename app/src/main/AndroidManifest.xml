<?xml version="1.0" encoding="utf-8"?><!-- AndroidManifest.xml -->
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.leruka.leruka">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <supports-screens android:anyDensity="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.GuestMainActivity"
            android:label="@string/title_activity_guest_main"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.UserMainActivity"
            android:label="@string/title_activity_user_main"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.RegisterActivity"
            android:label="@string/title_activity_register"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.LoginActivity"
            android:label="@string/title_activity_login"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.InstructionActivity"
            android:label="@string/title_activity_instruction"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.PublicHighscoreActivity"
            android:label="@string/title_activity_public_highscore"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.PrivateHighscoreActivity"
            android:label="@string/title_activity_prtivate_highscore"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.GameInstructionActivity"
            android:label="@string/title_activity_game_instruction"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.GameMainActivity"
            android:label="GAME"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.ChangeSettingsActivity"
            android:label="@string/title_activity_change_settings"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.RateLevelActivity"
            android:label="@string/title_activity_rate_level"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.GameOverMenuActivity"
            android:label="@string/title_activity_game_over_menu"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>